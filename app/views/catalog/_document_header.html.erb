<% # Overridden in order to adjust the hyperlink generated, eventually adding data source specific links 
   # header bar for doc items in index view -%>
<div class="documentHeader clearfix">
  <% # main title container for doc partial view -%>
    <h4 class="document-title span7">
      <span class="document-count"><%= t('blacklight.search.documents.counter', :counter => (document_counter + 1 + @response.params[:start].to_i)) %></span>
      <%= link_to document[:title].present? ? document[:title][0] : document.id, document.id, :target => '_blank' %>
    </h4>

  <% # bookmark functions for items/docs -%>
  <%= render_index_doc_actions document, :wrapping_class => "documentFunctions span2" %>
</div>