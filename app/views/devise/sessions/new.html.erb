<div id="content" class="span12">
  <div class="row">
    <div class="span3 center">
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {:class => 'form-signin'}) do |f| %>
        <h2><%= t('blacklight.header_links.signin') %></h2>
        
        <%= f.text_field :username, :class => 'input-block-level', :autofocus => true, :placeholder => 'Username' %>
      
        <% if devise_mapping.rememberable? %>
          <label class="checkbox">
            <%= f.check_box :remember_me %> 
            Remember me
          </label>
        <% end %>
      
        <%= button_tag :class => 'btn btn-primary' do %>
          <%= t('blacklight.header_links.signin') %>
        <% end %>
      <% end %>
      
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>